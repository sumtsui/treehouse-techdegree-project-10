extends ../layout

block content
  h1 Return Book
  include ../errorMsg
  p
    strong Book Title: 
    | #{loan.Book.title}
  p
    strong Loaned By: 
    | #{loan.Patron.first_name} #{loan.Patron.last_name}
  p
    strong Loaned On: 
    | #{loan.loaned_on}
  p
    strong Return By: 
    | #{loan.return_by}
  form(action=`/loans/return/${loan.id}` method='post')
    p
      label(for='returned_on') Returned on:
      input#returned_on(name='returned_on' type='text', value=`${new Date().toJSON().slice(0, 10)}`)
    p
      input(type='submit', value='Return Book')
